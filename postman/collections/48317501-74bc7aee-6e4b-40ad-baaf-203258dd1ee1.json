					"script": {
						"id": "d15eae84-8f23-4f81-89eb-734363934672",
						"exec": [
							"pm.test(\"Status code is 201\", function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"",
							"pm.test(\"Response has expected plant data fields with correct values\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property(\"botanicalName\", \"Ficus lyrata\");",
							"    pm.expect(jsonData).to.have.property(\"commonName\", \"Fiddle Leaf Fig\");",
							"    pm.expect(jsonData).to.have.property(\"stockCount\", 7);",
							"    pm.expect(jsonData).to.have.property(\"seasonality\", \"Summer\");",
							"    pm.expect(jsonData).to.have.property(\"description\", \"A popular indoor plant with large, glossy violin-shaped leaves, often used as a statement houseplant.\");",
							"});",
							"",
							"pm.environment.set(\"plant_id\", res._id);"
